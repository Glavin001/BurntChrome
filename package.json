{
  "name": "burntchrome",
  "version": "1.0.0",
  "description": "Software Engineering class project",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bower:install": "./node_modules/.bin/bower install",
    "postinstall": "./node_modules/.bin/npm-run-all bower:install compile",
    "compile:deps:content": "./node_modules/.bin/uglifyjs ./bower_components/jquery/dist/jquery.js ./bower_components/async/dist/async.js ./bower_components/lodash/dist/lodash.js ./node_modules/devtools-detect/index.js --compress --output extension/dist/deps-content.js",
    "compile:deps:background": "./node_modules/.bin/uglifyjs ./bower_components/async/dist/async.js ./bower_components/lodash/dist/lodash.js --compress --output extension/dist/deps-background.js",
    "compile:deps": "./node_modules/.bin/npm-run-all compile:deps:*",
    "compile:src": "./node_modules/.bin/babel extension/src --out-dir extension/dist --source-maps inline",
    "compile": "./node_modules/.bin/npm-run-all compile:deps compile:src",
    "start": "./node_modules/.bin/babel extension/src --watch --out-dir extension/dist --source-maps inline",
    "pack": "./node_modules/.bin/crx pack -o burnt_chrome.crx ./extension"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Glavin001/BurntChrome.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Glavin001/BurntChrome/issues"
  },
  "homepage": "https://github.com/Glavin001/BurntChrome#readme",
  "dependencies": {
    "devtools-detect": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "bower": "^1.7.7",
    "browserify": "^13.0.0",
    "crx": "^3.0.3",
    "npm-run-all": "^1.5.1",
    "uglifyjs": "^2.4.10"
  }
}
